<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:StarteR.ViewModels"
        xmlns:dvm="using:StarteR.DesignViewModels"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:m="using:StarteR.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="StarteR.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="StarteR"
        Background="Transparent"
        TransparencyLevelHint="Mica">
    <Design.DataContext>
        <dvm:MainWindow/>
    </Design.DataContext>
    
    <DockPanel>
        <ui:NavigationView PaneDisplayMode="Left"
                           MenuItemsSource="{Binding Flows}"
                           Content="{Binding CurrentEditor}"
                           SelectedItem="{Binding CurrentFlow}"
                           IsSettingsVisible="False"
                           IsPaneToggleButtonVisible="False"
                           OpenPaneLength="200">
            <ui:NavigationView.PaneHeader>
                <Button Command="{Binding AddFlowCommand}"
                        Margin="6 3"
                        Background="Transparent"
                        BorderThickness="0"
                        Height="36"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        ToolTip.Tip="Add new flow">
                    <Button.Content>
                        <ui:SymbolIcon Symbol="Add"/>
                    </Button.Content>
                </Button>
            </ui:NavigationView.PaneHeader>
            
            <ui:NavigationView.MenuItemTemplate>
            <DataTemplate DataType="{x:Type m:FlowModel}">
                <ui:NavigationViewItem Content="{Binding Name}"/> <!-- TODO: Icons -->
            </DataTemplate>
            </ui:NavigationView.MenuItemTemplate>
        </ui:NavigationView>
    </DockPanel>
</Window>
