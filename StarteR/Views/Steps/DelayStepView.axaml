<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:StarteR.ViewModels.Steps"
             xmlns:dvm="using:StarteR.DesignViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StarteR.Views.Steps.DelayStepView"
             x:DataType="vm:DelayStepViewModel">
    <Design.DataContext>
        <dvm:DelayStep/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="Auto, Auto"
          Height="35"
          ColumnSpacing="8">
        <TextBlock Grid.Column="0"
                   Text="Time"
                   VerticalAlignment="Center"/>
        
        <TimePicker Grid.Column="1"
                    SelectedTime="{Binding Model.Delay}"
                    UseSeconds="True"
                    ClockIdentifier="24HourClock"/>
    </Grid>
</UserControl>
