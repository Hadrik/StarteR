<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:StarteR.ViewModels"
             xmlns:dvm="using:StarteR.DesignViewModels"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StarteR.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    
    <Grid RowDefinitions="50, *">
        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Text="Settings"/>
        
        <ScrollViewer Grid.Row="1"
                      Margin="8"
                      Name="ContentScrollViewer">
            <ui:SettingsExpander Header="Run flows at startup">
                <ui:SettingsExpander.Footer>
                    <ToggleSwitch IsChecked="{Binding IsAutoStartEnabled}"/>
                </ui:SettingsExpander.Footer>
            </ui:SettingsExpander>
        </ScrollViewer>
    </Grid>
</UserControl>
